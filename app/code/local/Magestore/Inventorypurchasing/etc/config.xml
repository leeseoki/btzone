<config>
    <modules>
        <Magestore_Inventorypurchasing>
            <version>0.1.2</version>
        </Magestore_Inventorypurchasing>
    </modules>
    <frontend>
        <routers>
            <inventorypurchasing>
                <use>standard</use>
                <args>
                    <module>Magestore_Inventorypurchasing</module>
                    <frontName>inventorypurchasing</frontName>
                </args>
            </inventorypurchasing>
        </routers>
        <layout>
            <updates>
                <inventorypurchasing>
                    <file>inventorypurchasing.xml</file>
                </inventorypurchasing>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorypurchasing>
                    <files>
                        <default>Magestore_Inventorypurchasing.csv</default>
                    </files>
                </Magestore_Inventorypurchasing>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <inventorypurchasingadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Inventorypurchasing</module>
                    <frontName>inventorypurchasingadmin</frontName>
                </args>
            </inventorypurchasingadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inventorypurchasing>
                    <file>inventorypurchasing.xml</file>
                </inventorypurchasing>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorypurchasing>
                    <files>
                        <default>Magestore_Inventorypurchasing.csv</default>
                    </files>
                </Magestore_Inventorypurchasing>
            </modules>
        </translate>
        <events>
            <inventory_menu_list>
                <observers>
                    <inventorypurchasing_observers>
                        <class>inventorypurchasing/observer</class>
                        <method>inventorypurchasingMenu</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventory_menu_list>
            
            <!-- add warehouse and supplier when create product -->
            <catalog_product_save_after>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>catalogProductSaveAfterEvent</method>
                    </inventorypurchasing_observers>
                </observers>
            </catalog_product_save_after>
            
            <!-- duplicate product -->
            <catalog_model_product_duplicate>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>catalogModelProductDuplicate</method>
                    </inventorypurchasing_observers>
                </observers>
            </catalog_model_product_duplicate>
            
            <inventorypurchasing_supplier_save_after>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>supplierSaveAfter</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventorypurchasing_supplier_save_after>
            
            <inventorypurchasing_purchaseorder_delivery_save_after>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>deliverySaveAfter</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventorypurchasing_purchaseorder_delivery_save_after>
            
            <inventorypurchasing_purchaseorder_save_after>
                <observers>
                    <inventorypurchasingabc_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>purchaseorderSaveAfter</method>
                    </inventorypurchasingabc_observers>
                </observers>
            </inventorypurchasing_purchaseorder_save_after>
            
            <inventorypurchasing_purchaseorder_refund_save_after>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>returnorderSaveAfter</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventorypurchasing_purchaseorder_refund_save_after>
            <inventory_adminhtml_add_column_permission_grid>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>addColumnPermission</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventory_adminhtml_add_column_permission_grid>
            <inventory_adminhtml_add_more_permission>
                <observers>
                    <inventorypurchasing_observers>
                        <type>model</type>
                        <class>inventorypurchasing/observer</class>
                        <method>addMorePermission</method>
                    </inventorypurchasing_observers>
                </observers>
            </inventory_adminhtml_add_more_permission>
        </events>
    </adminhtml>   
    <global>      
        <models>
            <inventorypurchasing>
                <class>Magestore_Inventorypurchasing_Model</class>
                <resourceModel>inventorypurchasing_mysql4</resourceModel>
            </inventorypurchasing>
            <inventorypurchasing_mysql4>
                <class>Magestore_Inventorypurchasing_Model_Mysql4</class>
                <entities>
                    <supplier>
                        <table>erp_inventory_supplier</table>
                    </supplier>
                    <supplier_product>
                        <table>erp_inventory_supplier_product</table>
                    </supplier_product>
                    <supplier_history>
                        <table>erp_inventory_supplier_history</table>
                    </supplier_history>
                    <supplier_historycontent>
                        <table>erp_inventory_supplier_history_content</table>
                    </supplier_historycontent>
                    <shippingmethod>
                        <table>erp_inventory_shipping_method</table>
                    </shippingmethod>
                    <shippingmethod_history>
                        <table>erp_inventory_shipping_method_history</table>
                    </shippingmethod_history>
                    <shippingmethod_historycontent>
                        <table>erp_inventory_shipping_method_history_content</table>
                    </shippingmethod_historycontent>
                    <paymentterm>
                        <table>erp_inventory_payment_term</table>
                    </paymentterm>
                    <paymentterm_history>
                        <table>erp_inventory_payment_term_history</table>
                    </paymentterm_history>
                    <paymentterm_historycontent>
                        <table>erp_inventory_payment_term_history_content</table>
                    </paymentterm_historycontent>
                    <purchaseorder>
                        <table>erp_inventory_purchase_order</table>
                    </purchaseorder>
                    <purchaseorder_product>
                        <table>erp_inventory_purchase_order_product</table>
                    </purchaseorder_product>
                    <purchaseorder_productwarehouse>
                        <table>erp_inventory_purchase_order_product_warehouse</table>
                    </purchaseorder_productwarehouse>
                    <purchaseorder_delivery>
                        <table>erp_inventory_delivery</table>
                    </purchaseorder_delivery>
                    <purchaseorder_delivery_warehouse>
                        <table>erp_inventory_delivery_warehouse</table>
                    </purchaseorder_delivery_warehouse>
                    <purchaseorder_refund>
                        <table>erp_inventory_returned_order</table>
                    </purchaseorder_refund>
                    <purchaseorder_refund_product>
                        <table>erp_inventory_returned_order_product</table>
                    </purchaseorder_refund_product>
                    <purchaseorder_history>
                        <table>erp_inventory_purchase_order_history</table>
                    </purchaseorder_history>
                    <purchaseorder_historycontent>
                        <table>erp_inventory_purchase_order_history_content</table>
                    </purchaseorder_historycontent>
                    <purchaseorder_returnproductwarehouse>
                        <table>erp_inventory_return_product_warehouse</table>
                    </purchaseorder_returnproductwarehouse>
                </entities>
            </inventorypurchasing_mysql4>
        </models>
        <resources>
            <inventorypurchasing_setup>
                <setup>
                    <module>Magestore_Inventorypurchasing</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventorypurchasing_setup>
            <inventorypurchasing_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventorypurchasing_write>
            <inventorypurchasing_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventorypurchasing_read>
        </resources>
        <blocks>
            <inventorypurchasing>
                <class>Magestore_Inventorypurchasing_Block</class>
            </inventorypurchasing>
        </blocks>
        <helpers>
            <inventorypurchasing>
                <class>Magestore_Inventorypurchasing_Helper</class>
            </inventorypurchasing>
        </helpers> 
        <template>
            <email>              
                <inventorypurchasing_email_supplier_template translate="label" module="inventory">
                    <label>Inventory Supplier Email</label>
                    <file>inventory/email_supplier.html</file>
                    <type>html</type>
                </inventorypurchasing_email_supplier_template>
            </email>
        </template>          
    </global>
    <default>
            <inventorypurchasing>
                <email_supplier>
                    <template>inventorypurchasing_email_supplier_template</template>
                </email_supplier>
            </inventorypurchasing>
        </default>     
</config>