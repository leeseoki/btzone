<config>
    <modules>
        <Magestore_Inventoryphysicalstocktaking>
            <version>0.1.0</version>
        </Magestore_Inventoryphysicalstocktaking>
    </modules>
    <frontend>
        <routers>
            <inventoryphysicalstocktaking>
                <use>standard</use>
                <args>
                    <module>Magestore_Inventoryphysicalstocktaking</module>
                    <frontName>inventoryphysicalstocktaking</frontName>
                </args>
            </inventoryphysicalstocktaking>
        </routers>
        <layout>
            <updates>
                <inventoryphysicalstocktaking>
                    <file>inventoryphysicalstocktaking.xml</file>
                </inventoryphysicalstocktaking>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventoryphysicalstocktaking>
                    <files>
                        <default>Magestore_Inventoryphysicalstocktaking.csv</default>
                    </files>
                </Magestore_Inventoryphysicalstocktaking>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <inventoryphysicalstocktakingadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Inventoryphysicalstocktaking</module>
                    <frontName>inventoryphysicalstocktakingadmin</frontName>
                </args>
            </inventoryphysicalstocktakingadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inventoryphysicalstocktaking>
                    <file>inventoryphysicalstocktaking.xml</file>
                </inventoryphysicalstocktaking>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventoryphysicalstocktaking>
                    <files>
                        <default>Magestore_Inventoryphysicalstocktaking.csv</default>
                    </files>
                </Magestore_Inventoryphysicalstocktaking>
            </modules>
        </translate>
        <events>
            <inventory_menu_list>
                <observers>
                    <inventoryphysicalstocktaking_observers>
                        <class>inventoryphysicalstocktaking/observer</class>
                        <method>inventoryMenu</method>
                    </inventoryphysicalstocktaking_observers>
                </observers>
            </inventory_menu_list>
            <inventory_adminhtml_add_column_permission_grid>
                <observers>
                    <inventoryphysicalstocktaking_observers>
                        <class>inventoryphysicalstocktaking/observer</class>
                        <method>addColumnPermission</method>
                    </inventoryphysicalstocktaking_observers>
                </observers>
            </inventory_adminhtml_add_column_permission_grid>
            <inventory_adminhtml_add_more_permission>
                <observers>
                    <inventoryphysicalstocktaking_observers>
                        <class>inventoryphysicalstocktaking/observer</class>
                        <method>addMorePermission</method>
                    </inventoryphysicalstocktaking_observers>
                </observers>
            </inventory_adminhtml_add_more_permission>
        </events>
    </adminhtml>   
    <global>
        <models>
            <inventoryphysicalstocktaking>
                <class>Magestore_Inventoryphysicalstocktaking_Model</class>
                <resourceModel>inventoryphysicalstocktaking_mysql4</resourceModel>
            </inventoryphysicalstocktaking>
            <inventoryphysicalstocktaking_mysql4>
                <class>Magestore_Inventoryphysicalstocktaking_Model_Mysql4</class>
                <entities>
                    <physicalstocktaking>
                        <table>erp_inventory_physicalstocktaking</table>
                    </physicalstocktaking>
                    <physicalstocktaking_product>
                        <table>erp_inventory_physicalstocktaking_product</table>
                    </physicalstocktaking_product>
                </entities>
            </inventoryphysicalstocktaking_mysql4>
        </models>
        <resources>
            <inventoryphysicalstocktaking_setup>
                <setup>
                    <module>Magestore_Inventoryphysicalstocktaking</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventoryphysicalstocktaking_setup>
            <inventoryphysicalstocktaking_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventoryphysicalstocktaking_write>
            <inventoryphysicalstocktaking_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventoryphysicalstocktaking_read>
        </resources>
        <blocks>
            <inventoryphysicalstocktaking>
                <class>Magestore_Inventoryphysicalstocktaking_Block</class>
            </inventoryphysicalstocktaking>
        </blocks>
        <helpers>
            <inventoryphysicalstocktaking>
                <class>Magestore_Inventoryphysicalstocktaking_Helper</class>
            </inventoryphysicalstocktaking>
        </helpers>        
    </global>
</config>