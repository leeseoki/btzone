<layout>
    <catalog_product_view>
        <reference name="head">
            <action method="addCss" ifconfig="sizes/settings/enabled" ifvalue="1"><stylesheet>css/belvg/sizes.css</stylesheet></action>
        </reference>
        <reference name="jquery_head">
            <action method="addLib" ifconfig="sizes/settings/enabled" ifvalue="1"><libname>jquery</libname></action>
            <action method="addLib" ifconfig="sizes/settings/enabled" ifvalue="1"><libname>noconflict</libname></action>
            <action method="addJs" ifconfig="sizes/settings/enabled" ifvalue="1"><script>belvg/sizes/jquery-ui.custom.min.js</script></action>
            <action method="addJs" ifconfig="sizes/settings/enabled" ifvalue="1"><script>belvg/sizes/jquery.fancybox.pack.js</script></action>
        
        </reference>
        <reference name="content">
            <block type="sizes/product" name="sizes_block" template="belvg/sizes/sizes_block.phtml"/>
        </reference>
    </catalog_product_view>
    <sizes_front_popup>
        <reference name="root">
            <action method="setTemplate"><template>belvg/sizes/popup.phtml</template></action>
            <block type="sizes/popup" name="form_sizes">
                <action method="setTemplate" ifconfig="sizes/settings/enabled">
                    <template>belvg/sizes/popup/form.phtml</template>
                </action>
            </block>
            <block type="sizes/popup" name="result_sizes">
                <action method="setTemplate" ifconfig="sizes/settings/enabled">
                    <template>belvg/sizes/popup/result.phtml</template>
                </action>
            </block>
        </reference>
    </sizes_front_popup>    
</layout>   
