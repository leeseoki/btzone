			function initialize_<?php echo $random; ?>(){
				myLatlng = new google.maps.LatLng(<?php echo $contactMapLat;?>, <?php echo $contactMapLong;?>);
				map_canvas = document.getElementById('map_canvas_<?php echo $random; ?>');
